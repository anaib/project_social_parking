<div class="page-header">
  <h3>Private Parking #<%= @private_parking.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Offeree user</dt>
      <dd>
        <% if @private_parking.offeree_user.present? %>
          <a href="/users/<%= @private_parking.offeree_user_id %>">
            <%= @private_parking.offeree_user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Acceptee user</dt>
      <dd>
        <% if @private_parking.acceptee_user.present? %>
          <a href="/users/<%= @private_parking.acceptee_user_id %>">
            <%= @private_parking.acceptee_user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Date avail</dt>
      <dd><%= @private_parking.date_avail %></dd>

      <dt>Time</dt>
      <dd><%= @private_parking.time %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/private_parkings" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @private_parking.offeree_user %>
        <a href="/private_parkings/<%= @private_parking.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_private_parking/<%= @private_parking.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
