<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Password</dt>
      <dd><%= @user.password %></dd>

      <dt>First name</dt>
      <dd><%= @user.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @user.last_name %></dd>

      <dt>Phone number</dt>
      <dd><%= @user.phone_number %></dd>

      <dt>Zipcode</dt>
      <dd><%= @user.zipcode %></dd>

      <dt>Points</dt>
      <dd><%= @user.points %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A User has many private_parkings_offer -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Private_parkings_offer
      </li>

      <% @user.private_parkings_offer.each do |private_parking| %>
        <li class="list-group-item">
          <a href="/private_parkings/<%= private_parking.id %>">
            <%= private_parking.offeree_user_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/private_parkings/<%= private_parking.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == private_parking.acceptee_user %>
              <a href="/private_parkings/<%= private_parking.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_private_parking/<%= private_parking.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

